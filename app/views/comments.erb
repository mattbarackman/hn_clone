
  <header>
    <img id="header_image" src="/img/hackernews.gif">
    <h3>Hacker News</h3>
    <nav>
      <dl>
        <dd><a href='#'>new</a></dd>
        <dd><a href='#'>comments</a></dd>
        <dd><a href='#'>ask</a></dd>
        <dd><a href='#'>jobs</a></dd>
        <dd><a href='/submit'>submit</a></dd>
      </dl>
    </nav>
    <div id="login"><a href="/login">login</a></div>
  </header>


<div class="container">
  
  <% @comments.each_with_index do |comment, index| %>
    <div class="comment">
      <h3><%= index+1 %>. <a href="/posts/<%= comment.post.id %>"><%= comment.post.title %></a></h3>
      <span> <%= created_ago(comment.created_at) %> by <%= comment.user.username %> | 
      <p> <%= comment.body %> </p> 
     </div>
  <% end %>



</div>
