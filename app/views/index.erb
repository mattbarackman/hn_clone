
  <header>
    <a href="/"><img id="header_image" src="/img/hackernews.gif"></a>
    <h3>Hacker News</h3>
    <nav>
      <dl>
        <dd><a href='#'>new</a></dd>
        <dd><a href='#'>comments</a></dd>
        <dd><a href='#'>ask</a></dd>
        <dd><a href='#'>jobs</a></dd>
        <dd><a href='/submit'>submit</a></dd>
      </dl>
    </nav>
    <div id="login"><a href="/users/new">signup</a></div>
    <div id="login"><a href="/login">login</a></div>
  </header>


<div class="container">
  
  <% @posts.each_with_index do |post, index| %>
    <div class="post">
      <h3><%= index+1 %>. <a href="<%= post.url %>"><%= post.title %></a></h3>
      <span> <%= created_ago(post.created_at) %> by <%= post.user.username %> | 
      <a href="/posts/<%= post.id %>"><%= post.comments.count %> comments</a></span> 
     </div>
  <% end %>



</div>
