<% @posts.each_with_index do |post, index| %>
  <div class="post">
    <h3><%= index+1 %>. <a href="<%= post.url %>"><%= post.title %></a></h3>
    <span> <%= "#{post_votes(post.user)} points by #{post.user.username} #{created_ago(post.created_at)} | "%><a href="/posts/<%= post.id %>"><%= post.comments.count %> comments</a></span> 
   </div>
<% end %>
